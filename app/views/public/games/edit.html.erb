<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<h2>Editing Game</h2>
<% if @game.errors.any? %>
  <div class="alert alert-warning">
   <div><%= @game.errors.count %> error prohibited this game from being saved:</div>
    <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@game, url:"/games/#{@game.id}", local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
<% end %>
<%= link_to 'Show', @game %> |
<%= link_to 'Back', public_games_path %>

	</div>
	<div class="col-md-3"></div>

</div>
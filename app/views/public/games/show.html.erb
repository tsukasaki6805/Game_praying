<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%= render'users/profile', user: @user %>
            <%= render 'relationships/follow_button', user: @user %>
            <%= render 'games/newform', game: @game_new %>
        </div>
        <div class="col-xs-9">
            <table class="table">
                <h1>Game detail</h1>
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tr>
                    <td>
                        <%= link_to(public_user_path(@game.user), class: 'list-content') do %>
                            <%= attachment_image_tag @game.user, :profile_image, :fill, 50, 50, format:'jpeg', class: "pull-left profile-img", fallback:"no_image.jpg" %>
                            <br>
                            <br>
                            <br>
                            <%= @game.user.nickname %>
                        <% end %>
                    </td>

                    <th><%= link_to @game.title %></th>
                   <th><%= @game.body %></th>
                    <td id="game-<%= @game.id%>">
                   　<%= render 'game/item', game: @game %>
                    </td>
                    <% if @game.user == current_user %>
                        <td>
                            <button type="button" class="btn btn-info">
                                <%= link_to "Edit",edit_public_games_path, class: "edit_game_#{@game.id}" %>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger">
                                <%= link_to 'Destroy', public_game_path, method: :delete, remote: true, data: { confirm: 'Are you sure?'} %>
                            </button>
                        </td>
                　　<% end %>
                </tr>
            </table>
            <table class="comment_list_<%= @game.id %>">
            　　　<%= render 'game_comments/comment', game_comments: @game_comments, game: @game, comment: @comment %>
            </table>

            <%= form_with model: [@game, @comment] do |f| %>
              <%= f.text_area :comment %>
              <%= f.submit "送信" %>
  　         <% end %>
        </div>
    </div>
</div>
<div class="container">
 <div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'public/users/profile', user: @user %>
		<%= render 'public/relationships/follow_button', user: @user %>

		<h2>New Game</h2>
		<%= render 'public/games/newform', game: @game %>
	</div>

	<div class="col-xs-9">
		<h2>Games</h2>
		<!--games一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @games.each do |game| %>
				<tr>
					<td>
						<%= link_to public_user_path do %>
							<%= attachment_image_tag(game.user, :profileimage, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to "#{game.title}", public_game_path(game), class:"game_#{game.id}" %></td>
          <td><%= game.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--games一覧 -->
	</div>
 </div>
</div>
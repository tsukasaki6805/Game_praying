<header class='top-page-header'>

    <div class="header-top-content">
      <!--管理者と顧客で表示変更-->
      <% if admin_signed_in? %>
        <%= link_to admin_root_path, class: 'header-title' do %>
          <div>Game_praying</div>
          <div class='header-sub-title'>〜ゲームを持ち寄って遊ぼう！！！〜</div>
        <% end %>
      <% else %>
        <%= link_to root_path, class: 'header-title' do %>
          <div>Game_praying</div>
          <div class='header-sub-title'>〜ゲームを持ち寄って遊ぼう！！！〜</div>
        <% end %>
      <% end %>

      <div class="nav">
        <ul class="lists-right">
        <% if admin_signed_in? %>
        <!--管理者がログインしている時-->
          <li><%= link_to "登録者一覧",admin_users_path, class: 'fas fa-users nav-link text-light' %></li>
          <li><%= link_to "投稿一覧",admin_games_path, class: 'fas fa-list nav-link text-light' %></li>
          <li><%= link_to "ログアウト",destroy_admin_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %></li>
        <% elsif customer_signed_in? %>
        <!--顧客がログインしている時-->
          <li><%= link_to "マイページ",public_users_path(current_user), class: 'fas fa-user nav-link text-light' %></li>
          <li><%= link_to "投稿一覧",public_games_path, class: 'fas fa-birthday-cake nav-link text-light' %></li>
          <li><%= link_to "ログアウト",destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %></li>
        <% else %>
        <!--ログイン前-->
          <li><%= link_to "About",homes_about_path, class: 'fas fa-link nav-link text-light' %></li>
          <li><%= link_to "新規登録",new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %></li>
          <li><%= link_to "ログイン",new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <!--検索機能？-->
    <div class="header-right">
      <div class="header-search">
　　　　<input type="text" minlength="4" maxlength="8" size="30">
　　　　<a href="" class="btn btn-secondary">検索</a>
　　　</div>
    </div>

</header>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="order-detail text-center">
        <h4><%= @user.nickname %>さんのユーザー詳細</h4>
      </div>
    </div>
  </div>

      <%= form_with(model: @user, url:admin_customer_path, local: true ,method: :patch) do |f| %>
      <div class="row justify-content-center">
       <div class="col-md-8">
        <table class="table">
         <tr>
           <th><%= f.label :"ユーザーID" %></th>
           <td><%= f.label :"#{@user.id}" %></td>
         </tr>
         <tr>
           <th><%= f.label :"氏名" %></th>
           <td>
           <%= f.text_field :name %>
           </td>
         </tr>
         <tr>
           <th><%= f.label :"ニックネーム" %></th>
           <td>
           <%= f.text_field :nickname %>
           </td>
         </tr>
         <tr>
           <th><%= f.label :"メールアドレス" %></th>
           <td><%= f.text_field :email %></td>
         </tr>
         <tr>
           <th><%= f.label :"会員ステータス" %></th>
           <td>
           <%= f.radio_button :is_deleted, false %>
           <%= f.label :is_valid, "有効", {value: :false, style: "display: inline-block;"} %>
           <%= f.radio_button :is_deleted, true %>
           <%= f.label :is_valid, "退会済", {value: :true, style: "display: inline-block;"} %>
           </td>
          </tr>
        </table>
       </div>
      </div>

      <div class="row justify-content-center">
       <div>
         <%= f.submit "変更を保存" %>
       </div>
      </div>
      <% end %>
</div>